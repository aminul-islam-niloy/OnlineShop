﻿@using OnlineShop.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}


<br />
<div class="row">
    <div class="col-lg-6">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-lg-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New User</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Name
            </th>
            <th>
                UserName
            </th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Status</th>
            <th></th>
            <td></td>
            <td></td>
           
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                @if (item.LockoutEnd > DateTime.Now && item.LockoutEnd != null)
                {
                    <td >Inactive </td>
                    <td></td>
                  
                    <td >
                        <div class="btn-group">
                            <a asp-action="Active" class="btn btn-primary" asp-route-id="@item.Id">
                                <i class="far fa-edit"></i>
                            </a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>

                    </td>

                }
                else
                {
                    <td>Active</td>
                    <td style="width: 150px">
                        <partial name="_PartialView" model="@item.Id" />
                    </td>

                }

                <td></td>
               
                

            </tr> 
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }

            var locout = '@TempData["locout"]'
            if (save != '') {
                alertify.success(lockout);
            } 
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
}