﻿@using OnlineShop.Models
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}
<br />
<br />


<h1>My Cart</h1>

<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.Image" width="100px" height="100px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>
                        <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-lg-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">More Shoping</a>
    </div>
    @if(Model.Count != 0)
    {
        <div class="col-lg-6 text-center">

            <h3>Total Amount</h3>
            <h3> Total : @Model.Sum(c=>c.Price) </h3>
            <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Process to Checkout</a>
        </div>
    }
    
</div>

 