<h4>Order Items</h4>

<div class="row col-lg-12 col-md-10 col-12">



<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderDetail in Model.OrderDetails)
        {
            <tr>
                <td>@orderDetail.Product.Name</td>
                <td>@orderDetail.Product.Price</td>
            </tr>
        }
    </tbody>
</table>



