@model List<OrderDetailsViewModel>

@{
    ViewData["Title"] = "Order Information";
}

<h2>@ViewData["Title"]</h2>
<br />
<br />

@foreach (var orderDetails in Model)
{
    <br />
    <br />

    <div class="table-bordered ">
        <div class="row">
            <div class="col-lg-4">

                <h4>Order ID :  @orderDetails.OrderId</h4>
                <h4>Order No : @orderDetails.OrderNo</h4>
            </div>
            <div class="col-lg-4">
                <div class="mt-2">
                    <form asp-action="AssignToRider" method="post">
                        <input type="hidden" name="id" value="@Model" />
                        <button type="submit" class="btn btn-info">
                            Assign Rider
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">

                <div class="mt-2">
                    <form asp-action="UpdateDeliveryStatus" method="post">
                        <input type="hidden" name="id" value="@Model" />
                        <label for="deliveredCheckbox">Delivered:</label>
                        <input type="checkbox" id="deliveredCheckbox" name="delivered" />
                        <button type="submit" class="btn btn-primary">
                            Update
                        </button>
                    </form>
                </div>

            </div>
        </div>

     
            @* <div class="btn-group">

        <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
        Delete
        </button>
        </form>
        </div> *@

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>OrderDate</th>
                    <th>  
                        
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model"><i class="fa-solid fa-trash"></i></a>
                       </th>
                    
             
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@orderDetails.CustomerName</td>
                    <td>@orderDetails.CustomerAddress</td>
                    <td>@orderDetails.CustomerEmail</td>
                    <td>@orderDetails.CustomerPhone</td>
                    <td>@orderDetails.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            </tbody>

            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Color</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in orderDetails.Products)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.Price</td>
                        <td><img src="~/@product.Image" alt="Product Image" width="70" height="70" /></td>
                        <td>@product.ProductColor</td>
                        <td>@product.Quantity</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
}
