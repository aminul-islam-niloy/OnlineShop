@model List<OrderDetailsViewModel>

@{
    ViewData["Title"] = "Order Information";
}

<h2>@ViewData["Title"]</h2>

<br />

@foreach (var orderDetails in Model)
{
    <br />


    <div class="table-bordered ">
        <div class="row">
            <div class="col-lg-6">
                <div class="mt-4 ml-4">
                    <h4>Order ID :  @orderDetails.OrderId</h4>
                    <h4>Order No : @orderDetails.OrderNo</h4>
                    <h4>User ID: @orderDetails.UserId</h4>
                </div>
               


            </div>
            <div class="col-lg-2">
                <div class="mt-4">
                    <h4>Delivary Info</h4>
                    <form asp-action="AssignToRider" method="post">
                        <input type="hidden" name="id" value="@Model" />
                        <button type="submit" class="btn btn-info">
                            Assign Rider
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">

                <div class="mt-4" >
                    <h4>Order Status</h4>
                    <button type="submit" class="btn btn-primary">Processing </button>
                    <button type="submit" class="btn btn-primary">Tracking </button>
                    <button type="submit" class="btn btn-primary">Delivared </button>
                </div>

            </div>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>OrderDate</th>
                    <th>
                        <form method="post" asp-action="Delete" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="id" value="@orderDetails.OrderId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>




                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@orderDetails.CustomerName</td>
                    <td>@orderDetails.CustomerAddress</td>
                    <td>@orderDetails.CustomerEmail</td>
                    <td>@orderDetails.CustomerPhone</td>
                    <td>@orderDetails.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            </tbody>

            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Payment Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in orderDetails.Products)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.Price</td>
                        <td><img src="~/@product.Image" alt="Product Image" width="70" height="70" /></td>
                        <td>@product.ProductColor</td>
                        <td>@product.Quantity</td>
                        <td>Cash On Delivary</td>
                       

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
}

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('Are you sure you want to delete this item?')) {
                deleteOrder();
            }
        }

        function deleteOrder() {
            var form = document.getElementById('deleteForm');

            fetch(form.action, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({ id: form.id.value })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    // Optionally, perform some action after successful deletion
                    // For example, remove the item from the DOM
                    form.closest('div').remove();
                })
                .catch(error => {
                    console.error('There was a problem with your fetch operation:', error);
                });
        }
    </script>
}
