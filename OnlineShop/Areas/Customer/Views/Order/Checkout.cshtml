﻿@using OnlineShop.Models
@model OnlineShop.Models.Order
@using OnlineShop.Session
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Order Details";
}
@{

    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");

    if (products == null)
    {
        products = new List<Products>();
    }

}
<br />
<br />

<h2 class="text-info">Order Details</h2>
<form asp-action="Checkout" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-lg-6">
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-lg-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="PhoneNo"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="PhoneNo" class="form-control" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-lg-8">

                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>


            <div class="form-group row">
                <div class="col-lg-4">
                    <label for="paymentMethod">Payment Method</label>
                </div>
                <div class="col-lg-8">
                    <select id="paymentMethod" class="form-control" onchange="handlePaymentMethodChange()">
                        <option value="CashOnDelivery" selected>Cash on Delivery</option>
                        <option value="Card">Card</option>
                        <option value="MobileBanking">Mobile Banking</option>
                    </select>
                </div>
            </div>




        </div>

        <div class="col-lg-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in products)
                    {
                        <tr>
                            <td>
                                <img src="~/@item.Image" height="100px" width="100px" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.QuantityInCart</td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>

       


    </div>

    <div class="col-lg-6">


        <!-- Total Price Section -->

        <div>
            <h3>Total Price : @products.Sum(c => c.Price * c.QuantityInCart)</h3>
        </div>
        <div>
            <input type="submit" value="Place Order" class="btn btn-success" />
        </div>



    </div>
</form>


