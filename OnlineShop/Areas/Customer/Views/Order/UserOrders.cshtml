@model UserOrdersViewModel
<br />
<h4>User Orders</h4>
<br />

<div>

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div style="display: flex; align-items: center;">
              
                <p><strong>Name:</strong> @Model.User.FirstName</p>
                <p style ="margin-left: 20px; "><strong>Email:</strong> @Model.User.Email</p>
                <p style="margin-left: 20px; "><strong>Phone:</strong> @Model.User.PhoneNumber</p>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
    
</div>

<hr />

@foreach (var order in Model.Orders)
{
    <div>
        <div class="row">
            <div class="col-lg-4">

                <div >
                    <h4>Order Status</h4>
                    <button type="submit" class="btn btn-primary">Processing </button>
                    <button type="submit" class="btn btn-primary">Tracking </button>
                    <button type="submit" class="btn btn-primary">Delivared </button>
                </div>
            </div>
            <div class="col-lg-4">
                <div style="display: flex; align-items: center;">
                    <p><strong> Order No:</strong> @order.OrderNo</p>
                    <p style="margin-left: 30px;font:xx-large "><strong>Order Date:</strong> @order.OrderDate.ToShortDateString()</p>
                </div>
            </div>
            <div class="col-lg-4">

                <div style="display: flex; align-items: center;">
                    <h4>Order Manage  :  </h4>
                    <button type="submit" class="btn btn-primary ml-4 mr-4">Return </button>
                    <form method="post" asp-action="DeleteUserOrder" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="id" value="@order.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </div>
               

                </div>
        </div>
       
        
        <table class="table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Quantity</th>
                    <th>Payment Method</th>

                    <!-- Add more product details if needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in order.OrderDetails)
                {
                    <tr>
                        <td>@orderDetail.Product.Id</td>
                        <td>@orderDetail.Product.Name</td>
                        <td>@orderDetail.Product.Price</td>
                        <td><img src="~/@orderDetail.Product.Image" alt="Product Image" width="70" height="70" /></td>
                        <td>@orderDetail.Product.Quantity</td>
                        <td>Cash On Delivary</td>
                        <!-- Add more product details if needed -->
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr />
}
